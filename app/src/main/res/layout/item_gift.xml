<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/present_7_iv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_present_7" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/present_1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/ic_present_1" />

            <ImageView
                android:id="@+id/present_2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/ic_present_2" />

            <ImageView
                android:id="@+id/present_3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/ic_present_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/present_4_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/ic_present_4" />

            <ImageView
                android:id="@+id/present_5_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/ic_present_5" />

            <ImageView
                android:id="@+id/present_6_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/ic_present_6" />
        </LinearLayout>

        <ImageView
            android:id="@+id/set_gift_remind"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_gift_remind_entrance" />
    </LinearLayout>
</ScrollView>